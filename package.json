{
  "name": "string-utils-lite",
  "version": "0.1.6",
  "description": "Tiny string helpers: capitalize, titleCase, kebab-case, snake_case, camelCase, and PascalCase.",
  "keywords": [
    "string",
    "capitalize",
    "titlecase",
    "kebab-case",
    "snake_case",
    "camelCase",
    "PascalCase",
    "utilities",
    "string-utils",
    "string-utils-lite",
    "string-helpers",
    "string-transformations"
  ],
  "license": "MIT",
  "author": "Jahirul Tusar",
  "repository": {
    "type": "git",
    "url": "https://github.com/jahirultusar/JavaScript-string-utils-lite.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean",
    "test": "vitest run",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "devDependencies": {
    "tsup": "~8.1.0",
    "typescript": "~5.6.3",
    "vitest": "~3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10"
}
