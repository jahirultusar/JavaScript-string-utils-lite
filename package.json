{
  "name": "string-utils-lite",
  "version": "0.1.2",
  "description": "Tiny string helpers: capitalize, titleCase, kebab-case, and friends.",
  "keywords": [
    "string",
    "capitalize",
    "titlecase",
    "kebab-case",
    "utilities",
    "snake_case",
    "camelCase",
    "PascalCase"
  ],
  "license": "MIT",
  "author": "Jahirul Tusar",
  "repository": {
    "type": "git",
    "url": "https://github.com/jahirultusar/JavaScript-string-utils-lite.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean",
    "test": "vitest run",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
